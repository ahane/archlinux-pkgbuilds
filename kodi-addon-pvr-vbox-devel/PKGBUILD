# package version generated with # git log -1 --date=short --format="%cd.%h" | tr -d '-'

pkgname=kodi-addon-pvr-vbox-devel
_gitname=pvr.vbox
pkgver=20150320.010513e
_gitver=010513e03a99ab44f2c4e89be0af7263d57f5393
pkgrel=1
pkgdesc='VBox Gateway client addon for Kodi'
arch=('i686' 'x86_64')
url="https://github.com/Jalle19/$_gitname"
license=('GPL')
makedepends=('cmake' 'kodi-platform-devel')
depends=('kodi-devel>=15.0a2' 'tinyxml2')
source=("https://github.com/Jalle19/$_gitname/archive/$_gitver.tar.gz")
md5sums=('SKIP')

_prefix='/usr'

prepare() {
  msg "Starting make..."
  cd "$srcdir/$_gitname-$_gitver"
}

build() {
  cd "$srcdir/$_gitname-$_gitver"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/$_gitname-$_gitver/build"
  make DESTDIR="$pkgdir" install
}
